@using Charterio.Global
@using Charterio.Web.ViewModels.Ticket
@model TicketViewModel
@{
    this.ViewData["Title"] = $"Ticket {Model.TicketCode}";
}
<section class="page-title">
    <div class="page-title-img bg-img bg-overlay-darken">
        <div class="container">
            <div class="row align-items-center justify-content-center height100px">
                <div class="col-lg-8">
                    <div class="page-title-content">
                        <div class="title-border">
                            <h1 class="text-uppercase text-white font-weight-bold">Ticket ( @Model.TicketCode )</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-9 pt-md-6">
    <div class="container">
        
        

        <div class="row text-center">            
            <div class="col-6 font-size-22">
                <i class="fas fa-plane-departure"></i> @Model.StartAptName 
            </div>
            <div class="col-6 font-size-22">
                <i class="fas fa-plane-arrival"></i> @Model.EndAptName
            </div>                                   
        </div>
        <div class="row text-center">            
            <div class="col-6 font-size-22">
                @Model.StartInLocal.ToString("dd/MM/yyyy HH:mm:ss")
            </div>
            <div class="col-6 font-size-22">
                @Model.EndInLocal.ToString("dd/MM/yyyy HH:mm:ss")
            </div>                                   
        </div>
        <hr />

        <div class="row text-center">            
            <div class="col-12 font-size-22">                
                @foreach (var item in Model.PaxList)
               {
                   <span>@item.PaxTitle @item.PaxFirstName @item.PaxLastName @item.PaxDob</span><br />
               }
            </div>
                                              
        </div>
        

    </div>
</section>