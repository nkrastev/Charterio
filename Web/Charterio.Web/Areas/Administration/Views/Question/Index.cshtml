@using Charterio.Web.ViewModels.Administration.Question
@model List<QuestionViewModel>
@{
    this.ViewData["Title"] = "Administration / User questions";
}
<section class="page-title">
    <div class="page-title-img bg-img bg-overlay-darken">
        <div class="container">
            <div class="row align-items-center justify-content-center height100px">
                <div class="col-lg-8">
                    <div class="page-title-content">
                        <div class="title-border">
                            <h1 class="text-white text-uppercase font-weight-bold">@this.ViewData["Title"]</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="py-9 pt-md-5">
    <div class="container">
        <partial name="_AdminMenu" />        
        <div class="col-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Question</th>                        
                        <th scope="col">From (Name, email, phone)</th>                        
                        <th scope="col">Creation date</th>                        
                        <th scope="col">Is Answered</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Question</td>
                            <td>@item.UserName<br />@item.UserEmail<br />@item.UserPhone</td>                            
                            <td>@item.CreatedOn</td>
                            <td>@item.IsAnswered</td>
                            <td><a asp-action="Answer" asp-route-id="@item.Id">Answer</a></td>
                            <td><a asp-action="Archive" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to archive?');">Archive</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
